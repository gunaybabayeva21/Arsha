
@model List<Team>
@{
    int count = 0;
}
<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row bg-title">
            <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                <h4 class="page-title">Team</h4>
            </div>
            
            <!-- /.col-lg-12 -->
        </div>
        <!-- /row -->
        <div class="row">
            <div class="col-sm-12">
                <div class="white-box">
                    <h3 class="box-title">Team</h3>
                    <p class="text-muted">Add class <code>.table</code></p>
                   
                    <a  asp-action="Create"><button class="btn btn-success">Create</button> </a>
                    <div class="table-responsive">

                        <table class="table">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>First Name</th>
                                    <th>Last Name</th>
                                    <th>Image</th>
                                    <th>Bio</th>
                                    
                                    <th>Setting</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach(Team team in Model){
                                <tr>
                                    <td>@(++count)</td>
                                    <td>@team.Name</td>
                                    <td>@team.Surname</td>
                                    <td>
                                        <img style="width:100px" src="~/assets/img/team/@team.ProfileImageName">
                                    </td>
                                    <td>@team.Bio</td>
                                    
                                    
                                    <td>
                                       <button class="btn btn-info">Details</button>
                                       <a class="btn btn-primary" asp-action="Edit" asp-controller="Team" asp-route-id="@team.Id" method="post">Edit</a>
                                       <form asp-action="Delete" asp-controller="Team" asp-route-id="@team.Id" method="post"> 
                                         <button class="btn btn-danger">Delete</button>

                                       </form>
                                    </td>
                                </tr>
                                }
                               
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.row -->
   </div>
   </div>
